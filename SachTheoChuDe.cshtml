
@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/shared/UserLayout.cshtml";
}




@model IEnumerable<bai1.Models.Sach>
<h2>Sach theo chu de </h2>
     ViewBag.TB     
<div class="row">
    @{
        foreach (var item in Model)
        {
            <div class="col-4">
              @*  <img src="~/Images/hinhSP/@item.AnhBia" width="50%" height="50px" />*@
                @*<img src="@Url.Content("~/hinhSP/" + item.TenSach)"/>*@
                <img src="~/Images/hinhSP/@item.AnhBia" width="50%"/>
                @if (item.TenSach.Length > 30)
                {
                    <p>
                        Tieu de:
                        <b>@item.TenSach.Substring(0, 30)...</b>
                        <a href="@Url.Action("ChiTietSP", "SanPham", new { masach = @item.MaSach })" class="btn btn-primary">Xem Chi Tiết</a>
                    </p>
                }
                else
                {
                    <p>
                        Tieu de: <b>@item.TenSach</b>
                       <a href="@Url.Action("ChiTietSP", "SanPham", new { masach = @item.MaSach })" class="btn btn-primary">Xem Chi Tiết</a>
                    </p>
                }
            </div>
        }
    }
</div>

